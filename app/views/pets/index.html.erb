<p id="notice"><%= notice %></p>

<h1>Pets List</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Animal</th>
        <th>color</th>
        <th>Size</th>
        <th>Birth Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    
      <% @pets.each do |pet| %>
      
  
  
        <tr>
          <td><%= link_to pet.name %></td>
          <td><%= pet.animal %></td>
          <td><%= pet.color %></td>
          <td><%= pet.size %></td>
          <td><%= pet.birth_date %></td>
          
          <td><%= link_to 'Add', pet, method: :create, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Edit', pet, method: :update, class: "btn btn-outline-secondary btn-sm" %></td>
          <td><%= link_to 'Delete', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
        <% end %>
        
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pet', new_pet_path, class:"btn btn-secondary" %>